{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "typeRoots": ["types", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "~/components/*": ["src/components/*"],
      "~/pages/*": ["src/pages/*"],
      "~/shared/*": ["src/shared/*"],
      "~/static/*": ["src/static/*"],
      "~/routes": ["server/routes"]
    }
  }
}
